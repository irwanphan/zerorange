// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String      @id @default(cuid())
  image       String?
  title       String
  description String
  price       Float       @default(0) 
  assignedTo  String?
  ccTo        String[]
  dueAt       DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model User {
  id          String      @id @default(cuid())
  image       String?
  email       String
  firstName   String
  lastName    String?
  company     String[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Company {
  id          String      @id @default(cuid())
  image       String?
  email       String
  name        String
  admin       String
  member      String[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}